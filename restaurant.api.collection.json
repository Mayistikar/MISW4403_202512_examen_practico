    {
      "name": "Restaurant-Dish Relationships",
      "item": [
        {
          "name": "Add Dish to Restaurant",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/restaurants/:restaurantId/dishes/:dishId",
            "description": "Replace :restaurantId and :dishId with the respective IDs"
          }
        },
        {
          "name": "Get Dishes from Restaurant",
          "request": {
            "method": "GET",
