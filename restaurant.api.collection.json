  "item": [
    {
      "name": "Restaurants",
      "item": [
        {
          "name": "Get All Restaurants",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/restaurants"
          }
        },
        {
          "name": "Get Restaurant by ID",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/restaurants/:id",
            "description": "Replace :id with the restaurant ID",
            "url": {
              "raw": "{{baseUrl}}/restaurants/:id",
              "host": ["{{baseUrl}}"],
              "path": ["restaurants", ":id"]
            }
          }
        },
        {
          "name": "Create Restaurant",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/restaurants",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nombre\": \"string\",\n  \"direccion\": \"string\",\n  \"tipoCocina\": \"string\",\n  \"paginaWeb\": \"string\"\n}"
            }
          }
        },
        {
          "name": "Update Restaurant",
          "request": {
            "method": "PUT",
            "url": "{{baseUrl}}/restaurants/:id",
            "description": "Replace :id with the restaurant ID",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nombre\": \"string\",\n  \"direccion\": \"string\",\n  \"tipoCocina\": \"string\",\n  \"paginaWeb\": \"string\"\n}"
            }
          }
        },
        {
          "name": "Delete Restaurant",
          "request": {
            "method": "DELETE",
            "url": "{{baseUrl}}/restaurants/:id",
            "description": "Replace :id with the restaurant ID"
          }
        }
      ]
    },
